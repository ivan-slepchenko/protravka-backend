{
    "name": "protravka-backend",
    "version": "1.0.112",
    "description": "Backend for Protravka project",
    "main": "index.js",
    "scripts": {
        "start": "ts-node src/index.ts",
        "dev": "ts-node-dev src/index.ts",
        "build": "tsc",
        "migration:create": "typeorm migration:create src/migrations -n",
        "migration:generate": "npm run build && typeorm migration:generate -d dist/database.js -p src/migrations/auto",
        "migration:run": "npm run build && typeorm migration:run -d dist/database.js",
        "migration:revert": "npm run build && typeorm migration:revert -d dist/database.js",
        "docker-build": "docker build -t protravka-backend .",
        "docker-run": "docker run -p 3081:3081 protravka-backend",
        "get-version": "node -p \"require('./package.json').version\"",
        "increase-package-version": "npm version patch",
        "deploy": "npm run increase-package-version && npm run docker-build && wsl --setdefault Ubuntu && bash deploy.sh",
        "ssh-azure-container": "az containerapp exec --name protravka-backend --resource-group protravka --container protravka-backend --command \"/bin/sh\"",
        "test": "jest"
    },
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.9.1",
        "@types/node-cron": "^3.0.11",
        "@types/sequelize": "^4.28.20",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.16.0",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^7.2.0",
        "jest": "^29.0.0",
        "jest-mock": "^29.0.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.4.1",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "@azure/storage-blob": "^12.26.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.1",
        "firebase": "^11.0.2",
        "firebase-admin": "^13.0.1",
        "log4js": "^6.9.1",
        "multer": "^1.4.5-lts.1",
        "mysql": "^2.18.1",
        "mysql2": "^3.11.4",
        "node-cron": "^3.0.3",
        "nvm": "^0.0.4",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "sequelize": "^6.37.5",
        "sequelize-typescript": "^2.1.6",
        "typeorm": "^0.3.20"
    }
}
